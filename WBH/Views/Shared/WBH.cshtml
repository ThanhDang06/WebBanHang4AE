<!DOCTYPE html>
<html>
<head lang="vi">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F4HCM STORE</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">

    <!--Css dùng chung toàn site-->
    <link href="@Url.Content("~/Content/remixicon.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Variables.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/WBH.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    <!-- header -->
    <header class="navbar navbar-expand-lg bg-white fixed-top border-bottom shadow-sm">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            <!-- Logo -->
            <a class="navbar-brand me-4" href="@Url.Action("ProductList", "Products")">
                <img src="@Url.Content("~/Content/Img/Logo1.png")" width="75" alt="Logo" />
            </a>

            <!-- Menu chính + Toggle khi màn nhỏ -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                <ul class="navbar-nav mb-2 mb-lg-0 fw-bold menu-main">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ProductList", "Products")">Trang chủ</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="@Url.Action("ClothesList", "Products")">Sản Phẩm</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("CategoryProducts", "Products", new { category = "ao" })">Áo</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("CategoryProducts", "Products", new { category = "quan" })">Quần</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="@Url.Action("AccessoriesList", "Products")">Phụ kiện</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("CategoryProducts", "Products", new { category = "vo" })">Vớ</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("CategoryProducts", "Products", new { category = "non" })">Nón</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("CategoryProducts", "Products", new { category = "trangsuc" })">Trang sức</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-danger fw-bold" href="@Url.Action("Sale","Products")">SALE -50%</a>
                    </li>
                </ul>
            </div>

            <!-- Tìm kiếm + Đăng nhập + Giỏ hàng -->
            <div class="d-flex align-items-center gap-3 ms-auto">
                <!-- Thanh tìm kiếm -->
                <form class="d-flex position-relative" role="search" onsubmit="return false;">
                    <input class="form-control rounded-pill ps-5" id="searchInput" type="search"
                           placeholder="Tìm kiếm sản phẩm..."
                           data-ajax-url="@Url.Action("SearchAjax","Products")"
                           data-search-page="@Url.Action("Search","Products")" autocomplete="off" />
                    <i class="ri-search-line position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <div class="search-suggestions position-absolute w-100" id="searchResults"></div>
                </form>

                <!-- Đăng nhập + Giỏ hàng -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Login/Dropdown -->
                    @{
                        var username = Session["UserName"] as string;
                        var role = (Session["Role"] ?? "").ToString().ToLower();
                        var idCus = Session["IDCus"];
                    }

                    <div class="header-login dropdown">
                        @if (string.IsNullOrEmpty(username))
                        {
                            <a href="@Url.Action("DangNhap", "Login")"
                               class="btn btn-outline-dark d-flex align-items-center"
                               data-bs-toggle="tooltip"
                               data-bs-placement="bottom"
                               title="Đăng nhập">
                                <i class="ri-user-fill fs-5"></i>
                            </a>
                        }
                        else
                        {
                            <a href="#"
                               class="btn btn-outline-dark dropdown-toggle d-flex align-items-center"
                               id="userDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <i class="ri-user-fill fs-5 me-1"></i>
                                <span>@username</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                @if (role == "customer" && idCus != null)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Details", "Customers", new { id = idCus })">
                                            Hồ sơ của tôi
                                        </a>
                                    </li>
                                }
                                else if (role == "admin")
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Dashboard", "Admin")">
                                            Quản trị viên
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("DangXuat", "Login")">
                                        Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>


                    <!-- GIỎ HÀNG -->
                    <div class="cart-wrapper position-relative">
                        <a href="@Url.Action("Index", "Carts")" id="cart-icon" class="btn btn-primary position-relative">
                            <i class="ri-shopping-cart-line"></i>
                            <span id="cart-count" class="badge bg-danger position-absolute top-0 start-100 translate-middle">0</span>
                        </a>


                        <div id="cart-popup" class="cart-popup position-absolute shadow bg-white p-2">
                            <ul class="cart-items list-unstyled m-0 p-0" style="max-height: 300px; overflow-y: auto;">
                                <li>Giỏ hàng trống</li>
                            </ul>
                            <div class="cart-footer mt-2 border-top pt-2 d-flex justify-content-between align-items-center">
                                <strong>Tổng:</strong>
                                <span id="total-price">0₫</span>
                            </div>
                            <button class="checkout btn btn-success btn-sm w-100 mt-2">Thanh toán</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>


    @if (ViewBag.Breadcrumb != null)
    {
        @Html.Partial("_Breadcrumb", (List<(string Name, string Url)>)ViewBag.Breadcrumb)
    }
    <main>

        @RenderBody()
    </main>
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-3">
                    <h5>Giới thiệu</h5>
                    <p>F4AE Store bán quần áo, phụ kiện giá rẻ.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Liên hệ</h5>
                    <p>Email: <a href="mailto:maithanhdang060106@gmail.com" class="text-light">maithanhdang060106@gmail.com</a></p>
                    <p>Điện thoại: <a href="tel:0374482316" class="text-light">0374482316</a></p>
                    <p>81/3 Nguyễn Hồng Đào, P14, Q.Tân Bình, TP.HCM</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Mạng xã hội</h5>
                    <a href="https://www.facebook.com/share/15pSjqhc9J/" target="_blank" class="text-light me-2"><i class="ri-facebook-fill fs-4"></i></a>
                    <a href="#" class="text-light me-2"><i class="ri-instagram-line fs-4"></i></a>
                    <a href="#" class="text-light me-2"><i class="ri-tiktok-fill fs-4"></i></a>
                    <a href="#" class="text-light me-2"><i class="ri-youtube-fill fs-4"></i></a>
                    <a href="https://github.com/ThanhDang06/WebBanHang4AE" target="_blank" class="text-light"><i class="ri-github-fill fs-4"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="@Url.Content("~/Scripts/jquery-3.7.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Customer.js")"></script>
    <script src="@Url.Content("~/Scripts/WBH.js")" defer></script>
</body>
</html>
