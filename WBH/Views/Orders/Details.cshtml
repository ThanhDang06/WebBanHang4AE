@model WBH.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container mt-5">
    <h3 class="mb-4">Chi tiết đơn hàng #@Model.IDOrder</h3>

    <!-- Thông tin khách hàng -->
    <div class="card mb-4 p-3 shadow-sm rounded-4">
        <p><strong>Khách hàng:</strong> @(Model.Customer?.FullName ?? "-")</p>
        <p><strong>Ngày đặt:</strong> @(Model.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</p>
        <p><strong>Địa chỉ giao:</strong> @Model.AddressDelivery</p>
        <div class="d-flex align-items-center gap-2">
            <strong>Trạng thái:</strong>
            <span class="badge order-status-badge bg-@(Model.Status == "Hoàn thành" ? "success" :
                                         Model.Status == "Đang xử lý" ? "warning" :
                                         Model.Status == "Đã hủy" ? "danger" : "secondary")"
                  data-order-id="@Model.IDOrder"
                  data-url="@Url.Action("GetOrderStatus", "Customers")">
                @Model.Status
            </span>

        </div>

    </div>

    <!-- Bảng chi tiết sản phẩm -->
    <div class="card shadow-sm rounded-4 p-4">
        <h5 class="fw-bold mb-3">Sản phẩm trong đơn</h5>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@(detail.Product?.ProductName ?? "N/A")</td>
                            <td>@detail.Quantity</td>
                            <td>@(detail.Price?.ToString("N0") ?? "-") VNĐ</td>
                            <td>@((detail.Quantity * detail.Price)?.ToString("N0") ?? "-") VNĐ</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Tổng cộng:</th>
                        <th>@(Model.Total?.ToString("N0") ?? "-") VNĐ</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>