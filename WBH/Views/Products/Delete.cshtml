@model WBH.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xóa sản phẩm</h3>
        </div>
        <div class="card-body">
            <p class="fs-5 text-center text-danger mb-4">
                Bạn có chắc chắn muốn xóa sản phẩm này không?
            </p>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3 fw-bold">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-bold">Giá</dt>
                <dd class="col-sm-9">@String.Format("{0:N0} đ", Model.Price)</dd>

                <dt class="col-sm-3 fw-bold">Tồn kho</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3 fw-bold">Hình ảnh</dt>
                <dd class="col-sm-9">

                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Url.Content("~/Content/Img/" + Model.Image)" alt="@Model.ProductName" class="img-thumbnail" style="max-width:150px;" />
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Danh mục</dt>
                <dd class="col-sm-9">@Model.Category</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-center gap-3">
                    <input type="submit" value="Xóa" class="btn btn-danger btn-lg" />
                    @Html.ActionLink("Quay lại danh sách", "ProductManagement", "Admin", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>