
@{
    ViewBag.Title = "ThankYou";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<style>
    .checkout-wrapper {
        max-width: 600px;
        margin: 60px auto;
        padding: 40px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        text-align: center;
    }

    .success-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 20px;
        border-radius: 50%;
        background: #e8f9f0;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: pop 0.6s ease;
    }

        .success-icon img {
            width: 70px;
        }

    h2 {
        font-weight: 700;
        margin-bottom: 10px;
    }

    p {
        color: #666;
        font-size: 1.1rem;
    }

    /* Progress bar wrapper */
    .progress-bar-wrapper {
        width: 100%;
        height: 10px;
        background: #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
        margin: 30px 0;
        position: relative;
    }

    /* Progress bar animation */
    .progress-bar {
        width: 50%;
        height: 100%;
        background: linear-gradient(90deg, #00a650, #00c851);
        border-radius: 10px;
        position: absolute;
        animation: slide 2s linear infinite;
    }

    /* Animation thanh tiến trình */
    @@keyframes slide {
        0% {
            left: -50%;
        }

        50% {
            left: 100%;
        }

        100% {
            left: -50%;
        }
    }

    /* Icon pop animation */
    @@keyframes pop {
        0% {
            transform: scale(0.5);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

</style>

<div class="checkout-wrapper text-center">
    <div class="success-icon">
        <img src="~/Content/Img/success.jpg" alt="Success">
    </div>

    <h2>Đặt hàng thành công!</h2>
    <p>Đơn hàng của bạn đã được tiếp nhận và đang chờ xử lý.</p>

    <div class="progress-bar-wrapper">
        <div class="progress-bar"></div>
    </div>

    <a href="@Url.Action("ProductList", "Products")" class="btn btn-primary mt-4">Tiếp tục mua sắm</a>
</div>