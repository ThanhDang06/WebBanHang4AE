@model WBH.Models.Voucher

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4 text-danger">Xóa Voucher</h2>

    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xóa voucher <strong>@Model.Code</strong> không?
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Xóa</button>
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>