@model IEnumerable<WBH.Models.Voucher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/WBH.cshtml";

    int totalVouchers = Model.Count();
    decimal totalAmountValue = Model.Where(v => v.Type == "AMOUNT").Sum(v => v.Value);
}
<div class="container my-4">
    <h2 class="mb-4">Quản lý Voucher</h2>

    <!-- Thông tin tổng -->
    <div class="mb-3">
        <span class="badge bg-primary me-2">Tổng voucher: @totalVouchers</span>
        <span class="badge bg-success">Tổng giá trị (AMOUNT): @totalAmountValue.ToString("N0")₫</span>
    </div>

    <!-- Nút tạo voucher mới -->
    <p>
        @Html.ActionLink("Tạo Voucher mới", "Create", null, new { @class = "btn btn-success" })
    </p>

    <!-- Bảng danh sách voucher -->
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Code</th>
                <th>Type</th>
                <th>Value</th>
                <th>Min Order</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Remaining Uses</th>
                <th>Active</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@item.Code</td>
                    <td>@item.Type</td>
                    <td>
                        @(item.Type == "PERCENT" ? $"{item.Value}%" : $"{item.Value:N0}₫")
                    </td>
                    <td>@($"{item.MinOrderAmount:N0}₫")</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.RemainingUses</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDVoucher }, new { @class = "btn btn-sm btn-primary me-1" })
                        @Html.ActionLink("Details", "Details", new { id = item.IDVoucher }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDVoucher }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>