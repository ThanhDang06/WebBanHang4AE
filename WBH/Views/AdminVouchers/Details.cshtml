@model WBH.Models.Voucher

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Chi tiết Voucher</h4>
            <a href="@Url.Action("Index", "AdminVouchers")" class="btn btn-light btn-sm">Quay lại danh sách</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Mã Voucher</dt>
                <dd class="col-sm-8">@Model.Code</dd>

                <dt class="col-sm-4 fw-bold">Loại</dt>
                <dd class="col-sm-8">@Model.Type</dd>

                <dt class="col-sm-4 fw-bold">Giá trị</dt>
                <dd class="col-sm-8">
                    @if (Model.Type == "PERCENT")
                    {
                        @($"{Model.Value}%")
                    }
                    else
                    {
                        @String.Format("{0:N0} ₫", Model.Value)
                    }
                </dd>

                <dt class="col-sm-4 fw-bold">Đơn hàng tối thiểu</dt>
                <dd class="col-sm-8">@String.Format("{0:N0} ₫", Model.MinOrderAmount)</dd>

                <dt class="col-sm-4 fw-bold">Thời gian hiệu lực</dt>
                <dd class="col-sm-8">
                    @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                </dd>

                <dt class="col-sm-4 fw-bold">Số lượt còn lại</dt>
                <dd class="col-sm-8">@Model.RemainingUses</dd>

                <dt class="col-sm-4 fw-bold">Trạng thái</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <a href="@Url.Action("Edit", "AdminVouchers", new { id = Model.IDVoucher })" class="btn btn-warning">Chỉnh sửa</a>
                <a href="@Url.Action("Index", "AdminVouchers")" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>