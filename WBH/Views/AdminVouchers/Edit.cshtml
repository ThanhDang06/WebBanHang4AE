@model WBH.Models.Voucher

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/WBH.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4">Chỉnh sửa Voucher</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IDVoucher) <!-- Giữ ID để submit -->

        <div class="mb-3">
            @Html.LabelFor(m => m.Code, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Type, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.Type,
                new SelectList(new[] { "PERCENT", "AMOUNT" }, Model.Type),
                "Chọn loại",
                new { @class = "form-select" })
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Value, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Value, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.MinOrderAmount, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.MinOrderAmount, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.StartDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.EndDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
            </div>
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.RemainingUses, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.RemainingUses, new { @class = "form-control", type = "number", min = "0" })
        </div>

        <div class="mb-3 form-check">
            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", id = "IsActiveCheck" })
            <label class="form-check-label fw-bold" for="IsActiveCheck">Hoạt động</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
