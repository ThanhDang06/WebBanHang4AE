@model WBH.Models.Voucher

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/WBH.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4">Chỉnh sửa Voucher</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="mb-3">
            @Html.LabelFor(m => m.Code, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Type, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Type, new SelectList(new[] { "PERCENT", "AMOUNT" }), "Chọn type", new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Value, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.MinOrderAmount, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.MinOrderAmount, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.StartDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { type = "datetime-local", @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.EndDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { type = "datetime-local", @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.RemainingUses, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RemainingUses, new { @class = "form-control" })
        </div>

        <div class="mb-3 form-check">
            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", id = "IsActiveCheck" })
            <label class="form-check-label" for="IsActiveCheck">Active</label>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>