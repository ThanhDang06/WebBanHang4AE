@model WBH.Models.Sale

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}

<h2>Chi tiết Sale</h2>

<div>
    <h3>@Model.Product.ProductName</h3>
    <p>Category: @Model.Category</p>
    <p>Discount: @Model.DiscountPercent %</p>
    <p>Start: @Model.StartDate?.ToString("dd/MM/yyyy")</p>
    <p>End: @Model.EndDate?.ToString("dd/MM/yyyy")</p>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IDSale }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>