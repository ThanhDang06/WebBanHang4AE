@model WBH.Models.Sale

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-4">
    <h2 class="text-danger mb-4">Xóa Sale</h2>

    <div class="card shadow-sm p-4">
        <h5>Bạn có chắc chắn muốn xóa Sale này?</h5>
        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Sản phẩm:</strong> @Model.Product.ProductName</li>
            <li class="list-group-item"><strong>Giảm giá:</strong> @Model.DiscountPercent %</li>
            <li class="list-group-item">
                <strong>Ngày bắt đầu:</strong> @(Model.StartDate?.ToString("dd/MM/yyyy") ?? "")
            </li>
            <li class="list-group-item">
                <strong>Ngày kết thúc:</strong> @(Model.EndDate?.ToString("dd/MM/yyyy") ?? "")
            </li>

        </ul>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-center">
                <button type="submit" class="btn btn-danger me-2">Xóa</button>
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>