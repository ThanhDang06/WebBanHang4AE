@model WBH.Models.Sale

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-5">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white text-center py-3">
            <h3 class="mb-0">Xóa Sale</h3>
        </div>

        <div class="card-body">

            <div class="alert alert-danger text-center fs-5">
                <strong>Cảnh báo!</strong> Hành động này không thể khôi phục.
            </div>

            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Sản phẩm:</strong>
                    <span>@(Model.Product?.ProductName ?? "Không có sản phẩm")</span>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <strong>Giảm giá:</strong>
                    <span>@Model.DiscountPercent %</span>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <strong>Ngày bắt đầu:</strong>
                    <span>@(Model.StartDate?.ToString("dd/MM/yyyy"))</span>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <strong>Ngày kết thúc:</strong>
                    <span>@(Model.EndDate?.ToString("dd/MM/yyyy"))</span>
                </li>
            </ul>

            @using (Html.BeginForm("Delete", "Sales", new { id = Model.IDSale }, FormMethod.Post, new { id = "deleteForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.IDSale)

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        Xóa ngay
                    </button>

                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg px-4">
                        Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>