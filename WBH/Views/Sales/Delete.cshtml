@model WBH.Models.Sale

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xóa Sale</h3>
        </div>
        <div class="card-body">
            <p class="fs-5 text-center text-danger mb-4">
                Bạn có chắc chắn muốn xóa Sale này không?
            </p>

            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Sản phẩm:</strong></span>
                    <span>@(Model.Product?.ProductName ?? "Không có sản phẩm")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Giảm giá:</strong></span>
                    <span>@Model.DiscountPercent %</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Ngày bắt đầu:</strong></span>
                    <span>@(Model.StartDate?.ToString("dd/MM/yyyy") ?? "-")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong>Ngày kết thúc:</strong></span>
                    <span>@(Model.EndDate?.ToString("dd/MM/yyyy") ?? "-")</span>
                </li>
            </ul>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash me-1"></i> Xóa
                    </button>
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>