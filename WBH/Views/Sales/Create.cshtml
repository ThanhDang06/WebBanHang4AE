@model WBH.Models.Sale

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Thêm Sale mới</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Sales", FormMethod.Post, new { @class = "row g-3 needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <!-- Sản phẩm -->
                <div class="col-md-6">
                    @Html.LabelFor(m => m.IDProduct, "Sản phẩm", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.IDProduct, (SelectList)ViewBag.IDProduct, "Chọn sản phẩm", new { @class = "form-select", required = "required" })
                    <div class="invalid-feedback">Vui lòng chọn sản phẩm.</div>
                </div>

                <!-- Giảm giá (%) -->
                <div class="col-md-6">
                    @Html.LabelFor(m => m.DiscountPercent, "Giảm giá (%)", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.DiscountPercent, new { @class = "form-control", type = "number", min = "0", max = "100", required = "required", placeholder = "Nhập % giảm giá" })
                    <div class="invalid-feedback">Vui lòng nhập % giảm giá hợp lệ (0-100).</div>
                </div>

                <!-- Ngày bắt đầu -->
                <div class="col-md-6">
                    @Html.LabelFor(m => m.StartDate, "Ngày bắt đầu", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                    <div class="invalid-feedback">Vui lòng chọn ngày bắt đầu.</div>
                </div>

                <!-- Ngày kết thúc -->
                <div class="col-md-6">
                    @Html.LabelFor(m => m.EndDate, "Ngày kết thúc", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                    <div class="invalid-feedback">Vui lòng chọn ngày kết thúc.</div>
                </div>

                <!-- Nút lưu / hủy -->
                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg me-2">
                        <i class="bi bi-check-circle me-1"></i> Lưu
                    </button>
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap 5 validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}