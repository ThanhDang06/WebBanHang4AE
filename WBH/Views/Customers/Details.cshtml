@model WBH.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<h2>Chi tiết khách hàng</h2>

<div>
    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
</div>

@Html.ActionLink("Sửa", "Edit", new { id = Model.IDCus }, new { @class = "btn btn-primary" })
@Html.ActionLink("Xóa", "Delete", new { id = Model.IDCus }, new { @class = "btn btn-danger" })
@Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })