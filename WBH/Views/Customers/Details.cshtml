@model WBH.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<style>
    .customer-details .card {
        transition: all 0.3s ease;
    }

        .customer-details .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        }

    .customer-details h3 {
        font-weight: 600;
    }
</style>
<div class="container mt-5 customer-details">
    <!--Thông tin khách hàng-->
    <div class="card border-0 shadow-lg rounded-4 mb-4 p-4">
        <div class="d-flex align-items-center">
            <div>
                <h3 class="fw-semibold mb-1">@Model.FullName</h3>
                <p class="mb-0 text-muted">
                    <i class="bi bi-envelope me-2"></i>@Model.Email
                </p>
                <p class="mb-0 text-muted">
                    <i class="bi bi-telephone me-2"></i>@Model.Phone
                </p>
            </div>
        </div>
    </div>

    <!--lịch sử đơn hàng-->
    <div class="card border-0 shadow-sm rounded-4 mb-4 p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">
                <i class="bi bi-box-seam me-2"></i>Lịch sử đơn hàng gần đây
            </h5>
            <a href="@Url.Action("Index", "Orders", new { customerId = Model.IDCus })" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
        </div>

        @if (ViewBag.Orders != null && ((IEnumerable<WBH.Models.Order>)ViewBag.Orders).Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in (IEnumerable<WBH.Models.Order>)ViewBag.Orders)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "Orders", new { id = order.IDOrder })">
                                        @order.IDOrder
                                    </a>
                                </td>
                                <td>@(order.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>@(order.Total?.ToString("N0") ?? "-") VNĐ</td>
                                <td>
                                    <span class="badge order-status-badge bg-@(order.Status == "Hoàn thành" ? "success" : order.Status == "Đang xử lý" ? "warning" : "secondary")"
                                          data-order-id="@order.IDOrder"
                                          data-url="@Url.Action("GetOrderStatus", "Customers")">
                                        @order.Status
                                    </span>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted fst-italic">Khách hàng này chưa có đơn hàng nào.</p>
        }
    </div>

    <!-- địa chỉ giao hàng-->
    <div class="card border-0 shadow-sm rounded-4 p-4">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-geo-alt me-2"></i>Địa chỉ giao hàng
        </h5>
        @if (!string.IsNullOrEmpty(Model.Address))
        {
            <ul class="list-group list-group-flush">
                <li class="list-group-item px-0">
                    <i class="bi bi-house-door me-2 text-secondary"></i>
                    @Model.Address
                </li>
            </ul>
        }
        else
        {
            <p class="text-muted fst-italic">Chưa có địa chỉ giao hàng.</p>
        }
    </div>
</div>
