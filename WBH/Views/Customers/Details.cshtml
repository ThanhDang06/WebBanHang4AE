@model WBH.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<link rel="stylesheet" href="~/Content/Dashboard.css" />

<div class="navbar">
    <div class="navbar-left">
        <span class="logo">🛍️ Fashion Store</span>
    </div>
    <div class="navbar-right">
        <span class="username">@Session["Username"] (Khách hàng)</span>
        <a href="@Url.Action("Logout", "Login")" class="logout-btn">Đăng xuất</a>
    </div>
</div>

<div class="dashboard-container">
    <div class="profile-card">
        <h2>Xin chào, @Model.FullName!</h2>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Số điện thoại:</strong> @Model.Phone</p>
        <p><strong>Địa chỉ:</strong> @Model.Address</p>
        <a href="@Url.Action("ProductList", "Customers")" class="btn">Xem sản phẩm</a>
    </div>
</div>