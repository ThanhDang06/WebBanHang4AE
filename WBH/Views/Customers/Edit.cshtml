@model WBH.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-4">
    <h2 class="text-primary mb-4">Sửa Khách hàng</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IDCus)

        <div class="card shadow-sm p-4">
            <div class="mb-3">
                @Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Phone, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary me-2">Lưu</button>
            <a href="@Url.Action("CustomerManagement", "Admin")" class="btn btn-secondary">Hủy</a>
        </div>
    }
</div>