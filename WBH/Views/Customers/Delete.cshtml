@model WBH.Models.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-4">
    <h2 class="text-danger mb-4">Xóa Khách hàng</h2>

    <div class="card shadow-sm p-4">
        <p>Bạn có chắc muốn xóa khách hàng <strong>@Model.FullName</strong> không?</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Số điện thoại:</strong> @Model.Phone</p>

        @using (Html.BeginForm("Delete", "Customers", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.IDCus)
            <button type="submit" class="btn btn-danger me-2">Xóa</button>
            <a href="@Url.Action("CustomerManagement", "Admin")" class="btn btn-secondary">Hủy</a>
        }
    </div>
</div>