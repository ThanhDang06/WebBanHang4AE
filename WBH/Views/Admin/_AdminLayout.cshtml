<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="dashboard">
        <!-- SIDEBAR -->
        <div class="sidebar">
            <h3>👑 Admin</h3>
            @{
                string currentController = ViewContext.RouteData.Values["controller"].ToString();
            }
            <ul>
                <li><a href="@Url.Action("Index", "Dashboard")" class="@(currentController=="Dashboard"?"active":"")">Dashboard</a></li>
                <li><a href="@Url.Action("QuanLySanPham", "Admin")" class="@(currentController=="Admin"?"active":"")">Quản lý sản phẩm</a></li>
                <li><a href="@Url.Action("Index", "Sales")" class="@(currentController=="Sales"?"active":"")">Quản lý Sale</a></li>
                <li><a href="@Url.Action("Orders", "Admin")" class="@(currentController=="Admin"?"active":"")">Đơn hàng</a></li>
                <li><a href="@Url.Action("KhachHang", "Admin")" class="@(currentController=="Admin"?"active":"")">Khách hàng</a></li>
                <li><a href="@Url.Action("DangXuat", "Login")">Đăng xuất</a></li>
            </ul>
        </div>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="user-info mb-3">
                <h5>Xin chào, @Session["UserName"]</h5>
            </div>
            @RenderBody()
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>