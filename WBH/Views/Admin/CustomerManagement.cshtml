@model IEnumerable<WBH.Models.Customer>
@{
    ViewBag.Title = "CustomerManagement";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<div class="container my-4">
    <h2 class="text-primary mb-4 text-center">Quản lý Khách hàng</h2>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <span class="badge bg-primary fs-6">Tổng khách hàng: @Model.Count()</span>
        <!-- Nút thêm khách mới nếu cần -->
        @* <a href="@Url.Action("Create", "Customers")" class="btn btn-success">Thêm khách hàng mới</a> *@
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Số đơn hàng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr class="text-center align-middle">
                        <td class="text-start">@c.FullName</td>
                        <td class="text-start">@c.Email</td>
                        <td>@c.Phone</td>
                        <td>
                            <span class="badge bg-info">@c.Orders.Count()</span>
                        </td>
                        <td>
                            <!-- Nút hành động -->
                            <a href="@Url.Action("Details", "Customers", new { id = c.IDCus })" class="btn btn-sm btn-info me-1">Xem</a>
                            <a href="@Url.Action("Edit", "Customers", new { id = c.IDCus })" class="btn btn-sm btn-primary me-1">Sửa</a>
                            <a href="@Url.Action("Delete", "Customers", new { id = c.IDCus })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>