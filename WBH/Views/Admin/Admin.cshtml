@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/WBH.cshtml";
}
<style>
    .admin-container {
        max-width: 600px;
        margin: 80px auto;
        padding: 30px;
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
        font-family: Arial, sans-serif;
    }

        .admin-container h2 {
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 10px;
        }

    .admin-menu {
        list-style: none;
        padding: 0;
        margin-top: 25px;
    }

        .admin-menu li {
            margin-bottom: 15px;
        }

        .admin-menu a {
            display: block;
            padding: 12px 0;
            background: #f5f6fa;
            border-radius: 8px;
            text-decoration: none;
            font-size: 18px;
            font-weight: 600;
            transition: 0.3s;
        }

            .admin-menu a:hover {
                background: #007bff;
                color: white;
                transform: translateY(-3px);
            }

    .logout-btn {
        background: #dc3545 !important;
        color: #fff !important;
    }

        .logout-btn:hover {
            background: #c82333 !important;
        }
</style>
<div class="admin-container">
    <h2>Trang Quản Trị</h2>
    <p>Chào Admin — bạn đã đăng nhập thành công!</p>

    <ul class="admin-menu">
        <li>@Html.ActionLink("Quản lý Customers", "Index", "Customers")</li>
        <li>@Html.ActionLink("Quản lý Sản phẩm", "Index", "Products")</li>
        <li>@Html.ActionLink("Quản lý Orders", "Index", "Orders")</li>
        <li>
            @Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "logout-btn" })
        </li>
    </ul>
</div>
<script>
    document.querySelector('.logout-btn')?.addEventListener('click', function (e) {
        if (!confirm("Bạn chắc chắn muốn đăng xuất không?")) {
            e.preventDefault();
        }
    });
</script>